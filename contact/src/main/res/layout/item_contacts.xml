<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    tools:background="#E5E5E5"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_group"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_index"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            tools:text="G"
            android:layout_marginTop="24dp"
            android:textSize="24sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="30dp"
            android:background="#D9D9D9" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:id="@+id/iv_name_index"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginVertical="5dp"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            tools:background="@drawable/contact_circle_bg"
            tools:text="A" />

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/iv_name_index"
            android:textColor="#000000"
            android:textSize="16sp"
            android:layout_marginTop="2dp"
            tools:text="Gjiazhe" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/iv_name_index"
            android:textColor="#000000"
            android:layout_marginBottom="2dp"
            android:textSize="16sp"
            tools:text="12312312321" />

        <CheckBox
            android:id="@+id/cb_check"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:clickable="false"
            android:button="@null"
            android:layout_marginEnd="48dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/selector_check_box_style"
            android:layout_marginStart="32dp"
            />
    </RelativeLayout>
</LinearLayout>